<fieldset class="ux-checkbox">
    {{#if legend }}
    <legend>{{legend}}</legend>
    {{/if}}
    <label for="{{name}}">
        {{#if label}}
            {{label}}
        {{else}}
            {{yield}}
        {{/if}}
    </label>
    <input
        type="checkbox"
        id="{{id}}"
        checked="{{checked}}"
    />
</fieldset>
